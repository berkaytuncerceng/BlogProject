@page
@using Presentation.Areas.Identity.Pages.Account
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}
<link rel="stylesheet" href="~/css/Register.css" />

<!-- Ana içerik yapısı -->
<div class="content-wrapper">
    <div class="login-container">
        <div class="row no-gutters">
            <!-- Sol taraf - bilgi paneli -->
            <div class="col-lg-6 d-none d-lg-block info-panel">
                <div class="info-content">
                    <div class="site-branding mb-5">
                        <h1 class="site-logo">BlogSite</h1>
                    </div>
                    <h2 class="welcome-text">Hikaye anlatıcılığına başlayın</h2>
                    <p class="welcome-desc">Düşüncelerinizi dünyayla paylaşın, okurlara ilham verin ve blogunuzu büyütün.</p>
                    <div class="features-list">
                        <div class="feature-item">
                            <div class="feature-icon">✨</div>
                            <div class="feature-text">
                                <h3>Özelleştirilebilir Profil</h3>
                                <p>Kendi tarzınızı yansıtan bir profil oluşturun.</p>
                            </div>
                        </div>
                        <div class="feature-item">
                            <div class="feature-icon">🔍</div>
                            <div class="feature-text">
                                <h3>Keşfedilebilirlik</h3>
                                <p>İçeriklerinizi daha geniş kitlelere ulaştırın.</p>
                            </div>
                        </div>
                        <div class="feature-item">
                            <div class="feature-icon">📊</div>
                            <div class="feature-text">
                                <h3>İçerik Analitiği</h3>
                                <p>Yazılarınızın performansını gerçek zamanlı takip edin.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sağ taraf - kayıt formu -->
            <div class="col-lg-6 form-panel">
                <div class="form-wrapper">
                    <div class="auth-header">
                        <h2>Create Your Account</h2>
                        <p>Start writing your own story ✨</p>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger validation-message" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Username" class="form-control custom-input" autocomplete="username" />
                            <label asp-for="Input.Username">Username</label>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control custom-input" type="email" autocomplete="email" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control custom-input" type="password" autocomplete="new-password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control custom-input" type="password" autocomplete="new-password" />
                            <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" id="acceptTerms" name="acceptTerms" required />
                            <label class="form-check-label" for="acceptTerms">
                                I agree to the <a href="#" class="terms-link">Terms of Service</a> and <a href="#" class="terms-link">Privacy Policy</a>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary login-btn">Create Account</button>

                        <div class="social-login">
                            <p class="social-text">Or sign up with</p>
                            <div class="social-buttons">
                                <button type="button" class="btn btn-outline-secondary social-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-google" viewBox="0 0 16 16">
                                        <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                                    </svg>
                                </button>
                                <button type="button" class="btn btn-outline-secondary social-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-facebook" viewBox="0 0 16 16">
                                        <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z" />
                                    </svg>
                                </button>
                                <button type="button" class="btn btn-outline-secondary social-btn">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-twitter" viewBox="0 0 16 16">
                                        <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z" />
                                    </svg>
                                </button>
                            </div>
                        </div>

                        <div class="register-prompt">
                            <p>Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="register-link">Log in</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}